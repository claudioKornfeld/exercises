<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
<body>
    <%- include('partials/header') %>
    <main>
    <section>
        <form action="/home" method="get" class="create-form">
    <div class="control-formulario">
        <input type="text" name="nombre" placeholder="Nombre y Apellido" class="control" minlength="5"><span></span>
    </div>
    <div class="control-formulario">
      <input type="text" name="usuario" placeholder="Nombre de Usuario" class="control" minlength="5"><span></span>
    </div>
    <div class="control-formulario">
        <input type="email" name="email" placeholder="Email" class="control" minlength="12"><span></span>
      </div>
    <div class="control-formulario">
        <label for="fechaNacimiento">Fecha de Nacimiento</label>
        <input type="date" name="fechaNacimiento" value="aaaa-mm-dd" class="control date" id="fechaNacimiento"><span></span>
    </div>
    <div class="control-formulario">
        <input type="text" name="domicilio" id="domicilio" placeholder="Domicilio" class="control" minlength="5"><span></span>
    </div>
    <div class="control-formulario perfil">
        <label class="label-titulo">Perfil de Usuario</label>
        <label class="label-radio"><input type="radio" name="perfil" value="comprador" checked> Comprador </label>
        <label class="label-radio espacio"><input type="radio" name="perfil" value="vendedor" > Vendedor </label>
    </div>
    <div class="control-formulario">
        <label class="label-titulo block">Interes</label>
        <label><input type="checkbox" name="intereses" value="electro">
        Electro</label>
        <label><input type="checkbox" name="intereses" value="moda">
        Moda</label>
        <label><input type="checkbox" name="intereses" value="hogar">
        Hogar</label>
        <label><input type="checkbox" name="intereses" value="jugueteria">
        Jugueteria</label>
        <label><input type="checkbox" name="intereses" value="vidaSana">
        Visa sana</label>
    </div>
    <div class="control-formulario">
        <label class="label-titulo">Foto de usuario</label>
        <input type="file" name="avatar" accept=".jpg, .png" class="control none">
    </div>
    <div class="control-formulario">
        <input type="password" name="password" placeholder="Ingresa Contraseña" class="control" minlength="8"><span></span>
    </div>
    <div class="control-formulario">
        <input type="password" name="password2" placeholder="Confirma Contraseña" class="control" minlength="8"><span></span>
    </div>
    <button type="submit" class="boton">Guardar</button>
    <button type="reset" class="boton">Borrar</button>
    </form>
</section>
</main>
<%- include('partials/footer') %>

</body>
</html>